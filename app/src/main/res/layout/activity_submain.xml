<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/logo_mini"
        android:layout_width="145dp"
        android:layout_height="114dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="130dp"
        android:src="@drawable/ic_logo"/>

    <TextView
        android:id="@+id/logo_sname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo_mini"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:textSize="25sp"
        android:textStyle="bold"
        android:text="지피지기"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/logo_seng"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo_sname"
        android:layout_centerHorizontal="true"
        android:textSize="12sp"
        android:text="Golf Posture Guidance Application"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/explain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo_seng"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:paddingBottom="15dp"
        android:text="골프 자세를 알고\n나를 알자!"
        android:gravity="center_horizontal"
        android:textSize="18sp"
        android:textColor="#BDBDBD"/>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/loginBtn"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_above="@+id/joinBtn"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rounded_green"
        android:text="로그인"
        android:textSize="20sp"
        android:textColor="@color/light_yellow"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/joinBtn"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="70dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rounded_white"
        android:text="회원가입"
        android:textSize="20sp"
        android:textColor="@color/onyx"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/findPwd"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_below="@+id/joinBtn"
        android:layout_marginTop="-60dp"
        android:layout_centerHorizontal="true"
        android:text="@string/findPwd"
        android:textSize="10dp"
        android:textColor="#6F6F6F"
        android:background="#00ff0000"
        android:drawableLeft="@drawable/ic_find_password"
        />




</RelativeLayout>